<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/darktwo">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:id="@+id/layout"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/bugoff"
                style="@style/EventCardStyle"
                app:cardCornerRadius="10dp"
                app:strokeColor="@color/colorDarkBlue4"
                app:strokeWidth="3dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ibugoff"
                        android:layout_width="60dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:src="@drawable/ev_bugoff" />

                    <TextView
                        android:id="@+id/textbugoff"
                        style="@style/CardFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:text="Bug Off"
                        android:textAlignment="center" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/just_coding"
                style="@style/EventCardStyle"
                app:cardCornerRadius="10dp"
                app:strokeColor="@color/colorDarkBlue4"
                app:strokeWidth="3dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ijustcoding"
                        android:layout_width="60dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:src="@drawable/ev_justcoding" />

                    <TextView
                        android:id="@+id/textjustcoding"
                        style="@style/CardFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:text="Just Coding"
                        android:textAlignment="center" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/recode_it"
                style="@style/EventCardStyle"
                app:cardCornerRadius="10dp"
                app:strokeColor="@color/colorDarkBlue4"
                app:strokeWidth="3dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/irecodeit"
                        android:layout_width="60dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:src="@drawable/ev_recodeit" />

                    <TextView
                        android:id="@+id/textrecodeit"
                        style="@style/CardFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:text="Recode It"
                        android:textAlignment="center" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/codeBuddy"
                style="@style/EventCardStyle"
                app:cardCornerRadius="10dp"
                app:strokeColor="@color/colorDarkBlue4"
                app:strokeWidth="3dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icodebuddy"
                        android:layout_width="60dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:baselineAligned="false"
                        android:src="@drawable/ev_codebuddy" />

                    <TextView
                        android:id="@+id/textcodebuddy"
                        style="@style/CardFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:text="Code Buddy"
                        android:textAlignment="center" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/webandappdev"
                style="@style/EventCardStyle"
                app:cardCornerRadius="10dp"
                app:strokeColor="@color/colorDarkBlue4"
                app:strokeWidth="3dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iwebandappdev"
                        android:layout_width="60dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:scaleX="1.5"
                        android:scaleY="1.5"
                        android:src="@drawable/ev_webandroid" />

                    <TextView
                        android:id="@+id/textwebandappdev"
                        style="@style/CardFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:text="Web Android Dev"
                        android:textAlignment="center" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/dataquest"
                style="@style/EventCardStyle"
                app:cardCornerRadius="10dp"
                app:strokeColor="@color/colorDarkBlue4"
                app:strokeWidth="3dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/idataquest"
                        android:layout_width="60dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:scaleX="1.5"
                        android:scaleY="1.5"
                        android:src="@drawable/ev_dataquest" />

                    <TextView
                        android:id="@+id/textdataquest"
                        style="@style/CardFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:text="Data Quest"
                        android:textAlignment="center" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/electroquest"
                style="@style/EventCardStyle"
                app:cardCornerRadius="10dp"
                app:strokeColor="@color/colorDarkBlue4"
                app:strokeWidth="3dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ielectroquest"
                        android:layout_width="60dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:src="@drawable/ev_electroquest" />

                    <TextView
                        android:id="@+id/textelectroquest"
                        style="@style/CardFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:text="Electro Quest"
                        android:textAlignment="center" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>
</ScrollView>